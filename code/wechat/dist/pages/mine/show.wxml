<view>
    <!-- <layout-head></layout-head> -->

    <!-- wxp template -->
    <wxc-flex dir="top" main="start" _pid="{{_pid}}">
        <view class="top">
            <wxc-flex dir="left" main="around" _pid="{{_pid}}">
                <view class="top_left">
                    <wxc-flex dir="bottom" _pid="{{_pid}}">
                        <text>名声:99+</text>
                    </wxc-flex>
                </view>
                <view class="top_mid">
                    <wxc-cc _pid="{{_pid}}">
                        <wxc-avatar class="avatar" src="https://s10.mogucdn.com/mlcdn/c45406/171116_62f571l0ki0ffcg94h6kg6452h497_356x356.png" _pid="{{_pid}}"></wxc-avatar>
                    </wxc-cc>
                </view>
                <view class="top_right">
                    <wxc-flex dir="bottom" _pid="{{_pid}}">
                        <text>好评:80%</text>
                    </wxc-flex>
                </view>
            </wxc-flex>

        </view>
        <view class="mid open_page">
            <wxc-flex dir="left" main="around" _pid="{{_pid}}">
                <view class="mid_left">
                    <wxc-cc _pid="{{_pid}}">
                        <navigator url="speak" hover-class="navigator-hover">发言</navigator>
                    </wxc-cc>
                </view>
                <view class="mid_right">
                    <wxc-cc _pid="{{_pid}}">
                        <navigator url="activity" hover-class="navigator-hover">活动</navigator>
                    </wxc-cc>
                </view>
            </wxc-flex>
        </view>
        <view class="bottom">
            <wxc-flex dir="top" main="around" _pid="{{_pid}}">
                <view class="bottom_item">
                    <navigator url="identity">
                        <wxc-icon size="30" type="home" _pid="{{_pid}}"></wxc-icon> 名片</navigator>
                </view>
                <view class="bottom_item">
                    <navigator url="score">
                        <wxc-icon size="30" type="yes" _pid="{{_pid}}"></wxc-icon> 口碑</navigator>
                </view>
                <view class="bottom_item">
                    <navigator url="history">
                        <wxc-icon size="30" type="right" _pid="{{_pid}}"></wxc-icon> 历史</navigator>
                </view>
            </wxc-flex>
        </view>
    </wxc-flex>

    <layout-foot _pid="{{_pid}}"></layout-foot>
</view>