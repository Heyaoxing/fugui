.item {
  height: 320rpx;
  margin: 20rpx;
  padding: 15rpx;
  border-top: 1rpx #f1f1f1 solid;
  border-left: 1rpx #f1f1f1 solid;
  border-right: 1rpx #f1f1f1 solid;
  border-bottom: 5rpx #d1d1d1 solid;
}
.context {
  line-height: 85rpx;
}
.name {
  font-weight: 300;
  font-size: 50rpx;
  color: #3d3d3d;
}
.price {
  font-weight: 100; 
  font-size: 30rpx;
  color: #3d3d3d;
}
.avatar {
  display: inline-block;
  margin-right: 20rpx;
  width: 50rpx;
  height: 50rpx;
}
.user{
  color: #818181;
}